{
  "name": "json-repo",
  "version": "1.2.3",
  "description": "Read and write data to JSON files using the repository pattern. ",
  "scripts": {
    "test": "nyc mocha",
    "build": "tsc",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iotshaman/json-repo.git"
  },
  "keywords": [
    "json",
    "repository",
    "persistence",
    "node",
    "nodejs"
  ],
  "author": "Kyle Brown",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iotshaman/json-repo/issues"
  },
  "homepage": "https://github.com/iotshaman/json-repo#readme",
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.14.2",
    "@types/sinon": "^10.0.2",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "mocha": "^9.1.0",
    "nyc": "^15.1.0",
    "sinon": "^11.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.js",
      "coverage/*",
      "dist/*",
      "**/*.mock.ts"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  }
}
